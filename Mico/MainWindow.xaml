<Window x:Class="Mico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mico"
        mc:Ignorable="d" Height="350" Width="530" ResizeMode="CanMinimize" Title="Mico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="TimeType" IsReadOnly="True" Margin="5, 0, 5, 0" Height="22" Grid.Column="0">
            <ComboBoxItem Content="Horas" IsSelected="True"/>
            <ComboBoxItem Content="Minutos"/>
            <ComboBoxItem Content="Segundos"/>
        </ComboBox>
        <TextBox x:Name="Time" Grid.Column="1" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Width="120" UndoLimit="2"/>
        <Button x:Name="TimeSet" Grid.Column="2" Content="Programar" HorizontalAlignment="Left" Height="22" Width="75" IsDefault="True" Click="TimeSet_Click"/>
        <Button x:Name="Cancel" Content="Cancelar" Grid.Column="2" HorizontalAlignment="Left" Margin="0,177,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="Cancel_Click"/>

    </Grid>
</Window>
